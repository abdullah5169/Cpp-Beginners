#include <iostream>
using namespace std;

int main()
{
	string word;
	cout << "Enter the word you want to reverse : ";
	cin >> word;
	int lengthOfword = word.length();
	char temporaryCharacter;
	for (int i = 0; i < lengthOfword/2; i++)
	{
		temporaryCharacter = word[i];
		word[i] = word[lengthOfword - 1 - i];
		word[lengthOfword - 1 - i] = temporaryCharacter;
	}

	cout << "Reverse of the word : " << word;

	return 0;
}
